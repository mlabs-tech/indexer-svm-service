# Program (cryptarena-sol)
PROGRAM_ID=GX4gVWUtVgq6XxL8oHYy6psoN9KFdJhwnds2T3NHe5na

# Admin wallet for arena lifecycle operations (starting arenas, setting prices)
# Format: base58 string or JSON array
ADMIN_PRIVATE_KEY=YOUR_ADMIN_PRIVATE_KEY

# Bot filler wallet - used to airdrop SOL to bot wallets when they have insufficient balance
# This wallet should have SOL to fund bot entries (0.1 SOL per bot when needed)
# Format: base58 string or JSON array
BOT_FUNDER_PRIVATE_KEY=YOUR_FUNDER_PRIVATE_KEY

# Server
PORT=3001
HOST=0.0.0.0

# Logging
LOG_LEVEL=info

# Arena Lifecycle
# Waiting room countdown duration in milliseconds (from first player join)
# Local dev: 3 minutes (180000ms)
# Production: 10 minutes (600000ms)
WAITING_ROOM_COUNTDOWN_MS=180000

# Bot filler inactivity timeout in milliseconds (time before adding a bot when no new player joins)
# Local dev: 30 seconds (30000ms)
# Production: 1 minute (60000ms)
BOT_FILLER_INACTIVITY_TIMEOUT_MS=30000

